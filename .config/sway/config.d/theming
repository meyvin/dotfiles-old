# Mouse cursor
seat seat0 xcursor_theme Simp1e 24

# GTK app settings
exec_always {
    gsettings set org.gnome.desktop.interface gtk-theme 'Ark-Dark-solid'
    gsettings set org.gnome.desktop.interface icon-theme 'Tela-dark'
    gsettings set $gnome-schema cursor-theme 'Simp1e'
    gsettings set $gnome-schema font-name 'Cantarell 11'
}

# Client focused/not focused colours
client.focused $color1 $background_color $foreground_color $color1 $color1
client.unfocused $color2 $background_color $foreground_color $color1 $color2
